{
  "name": "romulator",
  "version": "0.0.0",
  "description": "A rom management system that can integrate your library with other platforms.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/romulator"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf --glob 'coverage' '*.tgz' '*.log' 'packages/**/dist' 'packages/**/*.tgz' 'packages/**/*.log' 'packages/**/stats'",
    "check": "tsc",
    "test": "vitest run --coverage",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "yarn clean && yarn check && yarn lint && yarn test && yarn build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@vitest/coverage-istanbul": "^2.1.8",
    "@zthun/lint-janitor": "^18.0.6",
    "@zthun/lint-janitor-config": "^18.0.6",
    "happy-dom": "^16.3.0",
    "husky": "^9.1.7",
    "lerna": "^8.1.9",
    "lodash-es": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-external": "^4.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "packageManager": "yarn@4.6.0"
}
